<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="user_form" parent="event_form"/>
    <style name="user_form_card_view" parent="event_form_card_view"/>

    <style name="user_photo">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="civ_border_width">5dp</item>
        <item name="civ_border_color">#80ffffff</item>
        <item name="android:src">@drawable/profile_placeholder</item>
    </style>

    <style name="user_form_field" parent="event_form_field">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">9</item>
    </style>

    <style name="user_form_field_icon">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="user_form_multiline_field" parent="user_form_field">
        <item name="android:maxLength">300</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="user_profile_call_to_action">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/user_profile_call_to_action</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="user_profile_create_button" parent="main_button">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">@string/user_profile_create</item>
    </style>

    <style name="user_profile_empty_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="user_full_name_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="user_settings_label">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/color_font_black</item>
        <item name="android:background">@color/background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">POWIADOMIENIA</item>
    </style>

    <style name="user_photo_button">
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/photo_pick</item>
        <item name="android:background">@drawable/photo_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>