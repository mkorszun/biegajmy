<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="event_details">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="event_details_basic_info" parent="event_details">
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/details_section_background</item>
    </style>

    <style name="event_details_join_button">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/main_button_color</item>
    </style>

    <style name="event_details_field">
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="event_details_datetime_field" parent="event_details_field">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="event_details_numeric_field" parent="event_details_field">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="event_details_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="event_details_description_layout">
        <item name="android:background">@color/details_section_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="event_details_frame_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/details_section_background</item>
    </style>

    <style name="event_details_label">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>