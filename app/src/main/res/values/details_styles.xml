<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="event_details">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="event_details_basic_info" parent="event_details">
        <item name="android:background">@color/white</item>
    </style>

    <style name="event_details_join_button">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/main_button_color</item>
    </style>

    <style name="event_details_field">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/color_font_black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">web|email</item>
    </style>

    <style name="event_details_field_small" parent="event_details_field">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="event_details_datetime_field" parent="event_details_field">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="event_details_numeric_field" parent="event_details_field">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="event_details_description" parent="event_details_field">
    </style>

    <style name="event_details_description_layout" parent="event_details_basic_info">
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="event_details_frame_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="event_details_label">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_font_grey</item>
    </style>

</resources>