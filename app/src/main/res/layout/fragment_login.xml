<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/social_login_layout">

    <TextView style="@style/login_label"
        android:text="@string/social_login"
        android:textColor="@color/color_font_white"
        android:layout_above="@+id/authButton"/>

    <com.facebook.login.widget.LoginButton
        style="@style/facebook_login_button"
        android:id="@+id/authButton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
