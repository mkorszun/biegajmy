<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/primary"
        android:textColor="#FFFFFF"
        android:text="Dodaj Trenning"
        android:id="@+id/add_event"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <fragment
        android:id="@+id/event_list"
        android:name="com.biegajmy.events.user.EventUserListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/add_event"
        tools:context="com.biegajmy.events.user.EventUserListActivity"
        tools:layout="@android:layout/list_content"/>

    <com.biegajmy.BottomMenu_
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>