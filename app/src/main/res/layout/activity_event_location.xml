<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout style="@style/search_address_layout">
        <EditText style="@style/search_address_field"
            android:id="@+id/address_search"/>
        <ImageButton style="@style/search_address_button"
            android:id="@+id/address_search_button"/>
    </LinearLayout>

    <fragment
        style="@style/event_form_map_full"
        android:id="@+id/event_location"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</LinearLayout>