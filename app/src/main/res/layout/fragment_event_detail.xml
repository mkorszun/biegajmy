<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="16dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout style="@style/event_details" android:id="@+id/event_details">

            <Button style="@style/event_details_join_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/event_join"/>

            <fragment style="@style/event_form_map_small"
                android:id="@+id/event_location"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/event_join"/>

            <RelativeLayout style="@style/event_details"
                android:id="@+id/event_base_info"
                android:layout_below="@+id/event_location">

                <LinearLayout style="@style/event_form_field" android:id="@+id/event_date_time">

                    <EditText style="@style/event_details_datetime_field"
                        android:id="@+id/event_date"
                        android:drawableLeft="@drawable/ic_mode_edit_grey600_36dp"/>

                    <EditText style="@style/event_details_datetime_field"
                        android:id="@+id/event_time"
                        android:drawableLeft="@drawable/ic_mode_edit_grey600_36dp"/>

                </LinearLayout>

                <LinearLayout style="@style/event_form_field"
                    android:id="@+id/form_event_distance_pace"
                    android:layout_below="@+id/event_date_time">

                    <EditText style="@style/event_details_numeric_field"
                        android:id="@+id/event_distance"
                        android:drawableLeft="@drawable/ic_mode_edit_grey600_36dp"
                        android:layout_below="@+id/form_event_date_time"/>

                    <EditText style="@style/event_details_numeric_field"
                        android:id="@+id/event_pace"
                        android:drawableLeft="@drawable/ic_mode_edit_grey600_36dp"
                        android:layout_below="@+id/event_distance"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView style="@style/event_details_description"
                android:id="@+id/event_description"
                android:layout_below="@+id/event_base_info"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_below="@+id/event_details"
            android:id="@+id/event_participants_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_below="@+id/event_participants_container"
            android:id="@+id/event_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_below="@+id/event_tags"
            android:id="@+id/event_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_below="@+id/event_owner"
            android:id="@+id/event_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</ScrollView>