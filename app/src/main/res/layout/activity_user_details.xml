<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.biegajmy.user.UserDetailsActivity">

    <com.pkmmte.view.CircularImageView style="@style/user_photo"
        android:id="@+id/userPhoto"
        android:src="@drawable/tmp"
        app:border="true"
        app:border_color="@color/primary_light"
        app:border_width="4dp"/>

    <LinearLayout
        android:id="@+id/full_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userPhoto"
        >

        <EditText style="@style/user_form_field"
            android:id="@+id/firstname"
            android:layout_weight="1"
            android:hint="@string/user_form_first_name"/>

        <EditText style="@style/user_form_field"
            android:id="@+id/lastname"
            android:layout_weight="1"
            android:hint="@string/user_form_last_name"/>

    </LinearLayout>


    <EditText style="@style/user_form_multiline_field"
        android:id="@+id/bio"
        android:layout_below="@+id/full_Name"
        android:hint="@string/user_form_bio"/>

    <EditText style="@style/user_form_multiline_field"
        android:id="@+id/tags"
        android:layout_below="@+id/bio"
        android:hint="@string/user_form_tags"/>

</RelativeLayout>
